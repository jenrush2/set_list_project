<h1> Edit <%= @song.title %> </h1>

<%= form_with model: @song, local: true, data: {turbo: false} do |form| %>
    <%= form.label :title, "Song title"  %>
    <%= form.text_field :title  %>

    <%= form.label :length  %>
    <%= form.text_field :length  %>

    <%= form.label :play_count  %>
    <%= form.text_field :play_count  %>

    <%= form.label :artist_id  %>
    <%= form.text_field :artist_id  %>

    <%= form.submit %>

<% end %>