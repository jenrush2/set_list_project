<h1> Songs List </h1>

<% @songs.each do |song| %>
    <ul>
        <section id="song-<%= song.id %>">
            <li>
                <h3> <%= link_to song.title, "/songs/#{song.id}" %> </h3>
                <p> Length: <%= song.length %> </p>
                <p> Play Count: <%= song.play_count %> </p>
                <%= button_to "Edit #{song.title}", "/songs/#{song.id}/edit", method: :get %>
                <%= button_to "Add Song", "/cart/#{song.id}", method: :patch %>
            </li>
        </section>
    </ul>
<% end %>